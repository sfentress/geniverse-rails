<h1>New activity</h1>

<% form_for(@activity) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :initial_alleles %><br />
    <%= f.text_field :initial_alleles %>
  </p>
  <p>
    <%= f.label :base_channel_name %><br />
    <%= f.text_field :base_channel_name %>
  </p>
  <p>
    <%= f.label :max_users_in_room %><br />
    <%= f.text_field :max_users_in_room %>
  </p>
  <p>
    <%= f.label :send_bred_dragons %><br />
    <%= f.check_box :send_bred_dragons %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', activities_path %>